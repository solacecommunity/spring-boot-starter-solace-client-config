<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %p [%thread] %c{0}:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="ch.sbb.tms.capaopt.springbootstarter.solaceclientconfig.infra" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>